library(readxl)
library(dplyr)
library(writexl)

# 1. فایل اکسل رو بخون
df <- read_excel("path_to_your_file.xlsx")

# 2. اصلاح گروه‌ها بر اساس title یا characteristics_ch1
# فرض کنیم title شامل OSE برای کنترل و CEPI برای کیس هست
df <- df %>%
  mutate(group = case_when(
    grepl("OSE", title) ~ "control",
    grepl("CEPI", title) ~ "case",
    TRUE ~ NA_character_   # اگه هیچکدوم نبود، NA میشه
  )) %>%
  # 3. حذف نمونه‌های خالی
  filter(!is.na(group))

# 4. ذخیره به فایل جدید
write_xlsx(df, "path_to_your_file_cleaned.xlsx")
