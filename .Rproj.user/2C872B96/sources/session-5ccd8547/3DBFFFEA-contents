# --------- تنظیم مسیر پروژه ----------
proj_path <- "C:/Users/asus/Desktop/Roozbeh/NIV-NSW-2025/GitHub/EOC_WNT_TGFb_EMT_Transcriptomics"
setwd(proj_path)
getwd()  # فقط برای چک کردن مسیر

# --------- 1. Git init ----------
system("git init")

# --------- 2. اضافه کردن همه فایل‌ها ----------
system("git add .")

# --------- 3. اولین کامیت ----------
system('git commit -m "Initial commit – add all scripts and README"')

# --------- 4. اضافه کردن remote به GitHub ----------
system("git remote add origin https://github.com/heidarzadehroozbeh-cmyk/EOC_WNT_TGFb_EMT_Transcriptomics.git")

# --------- 5. push به شاخه main ----------
system("git branch -M main")  # اگر شاخه اصلی main نیست
system("git push -u origin main")
